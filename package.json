{
  "name": "plaf",
  "version": "1.20.0",
  "description": "Run plaf in a directory with markdown files, and PLAF you have a static website",
  "main": "index.js",
  "scripts": {
    "test": "mocha test",
    "watch": "npm-watch",
    "nyc": "nyc --reporter=text npm run test > test/coverage.txt",
    "nyc-html": "nyc --reporter=html --report-dir=coverage npm run test"
  },
  "watch": {
    "test": {
      "patterns": [
        "src",
        "test"
      ],
      "extensions": "js"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cfe84/plaf.git"
  },
  "author": "Charles Feval",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/cfe84/plaf/issues"
  },
  "bin": {
    "plaf": "bin/plaf"
  },
  "homepage": "https://github.com/cfe84/plaf#readme",
  "dependencies": {
    "command-line-usage": "^6.1.0",
    "handlebars": "^4.7.3",
    "lunr": "^2.3.8",
    "marked": "^0.8.0",
    "yaclip": "^1.1.1",
    "yaml-js": "^0.2.3"
  },
  "devDependencies": {
    "mocha": "^7.1.0",
    "node-watch": "^0.6.3",
    "npm-watch": "^0.6.0",
    "nyc": "^15.0.0",
    "should": "^13.2.3",
    "testdouble": "^3.13.0"
  }
}
